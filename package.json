{
  "name": "modern-graphql",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "npm-run-all --parallel tsc:watch nodemon",
    "build": "npm-run-all clean prisma:generate gql:codegen tsc copyfiles",
    "build:dev": "npm-run-all clean prisma:generate:dev gql:codegen:dev tsc copyfiles",
    "docker": "cd ./prisma && docker-compose up -d",
    "nodemon": "env-cmd ./config/dev.env nodemon dist/src/index.js --ext js,graphql --exec node",
    "prisma:generate": "cd ./prisma && prisma generate --env-file ../config/prod.env",
    "prisma:generate:dev": "cd ./prisma && prisma generate --env-file ../config/dev.env",
    "prisma:deploy": "cd ./prisma && prisma deploy --env-file ../config/prod.env",
    "prisma:deploy:dev": "cd ./prisma && prisma deploy --env-file ../config/dev.env",
    "gql:codegen": "env-cmd ./config/prod.env graphql codegen",
    "gql:codegen:dev": "env-cmd ./config/dev.env graphql codegen",
    "clean": "rimraf dist && rimraf ./src/generated",
    "tsc": "tsc --skipLibCheck",
    "tsc:watch": "tsc --watch --skipLibCheck",
    "copyfiles": "cd src && copyfiles ./**/*.graphql ../dist/src",
    "heroku-postbuild": "npm run build",
    "test": "env-cmd ./config/test.env jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-boost": "^0.1.22",
    "bcryptjs": "^2.4.3",
    "cross-fetch": "^3.0.0",
    "dotenv": "^6.1.0",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "graphql-yoga": "^1.16.7",
    "jsonwebtoken": "^8.4.0",
    "prisma": "^1.22.0",
    "prisma-binding": "^2.1.6",
    "prisma-client-lib": "^1.22.0"
  },
  "devDependencies": {
    "@divyenduz/ts-graphql-plugin": "^0.1.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^23.3.10",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/node": "^10.12.12",
    "copyfiles": "^2.1.0",
    "env-cmd": "^8.0.2",
    "graphql-cli": "^2.17.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.1"
  }
}
